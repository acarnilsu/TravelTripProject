@using TravelTripProject.Models.Sınıflar
@model List<Blog>
<div class="con-bot">
    @foreach(var x in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:300px;height:150px;"/>
        </div>
        <div class="left-text">
            <h4>@x.Title</h4>
            <span class="doller">@x.Date.ToString("dd:MM:yyyy")</span>
            <p>@x.Comment.Substring(0,100)</p>
            <p><a href="/Blog/BlogDetail/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
    }
    @Html.Action("Partial2","Default")

    <div class="clear"></div>
</div>
